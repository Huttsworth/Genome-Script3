{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["es6", "dom"],  // Make sure 'dom' is included
        "outDir": "./out",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "typeRoots": ["node_modules/@types"],
        "types": ["jest", "node"]  // Add "node" here
    },
    "include": ["src/**/*.ts", "src/**/*.js"]
}
